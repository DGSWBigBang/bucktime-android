<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/idCafeInfView"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10"
    app:layout_constraintVertical_bias="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/idCafeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="엄카페"
        android:textColor="@color/black"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2">
        <TextView
            android:id="@+id/idCafeOpenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="open:  9:00"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/idCafeCloseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="close: 21:00"
            android:textColor="@color/black"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/idCafeAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="수영구 수영로 481번길"
        android:textColor="@color/black"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/idCafePhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="010-4871-3125"
        android:textColor="@color/black"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/idCafeInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="대충 엄청난 내용. 엄청나고 들으면 기가 뚫린느 이야기들이 있는 없까케 ㄹㅇㅋㅋ"
        android:textColor="@color/black"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/idCafeTimeButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="예약하기"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:background="@drawable/cafe_information_button_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:layout_weight="1"/>
</LinearLayout>