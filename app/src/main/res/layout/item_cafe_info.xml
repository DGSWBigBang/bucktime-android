<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/idCafeInfView"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/idCafeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="엄카페"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2">
        <TextView
            android:id="@+id/idCafeOpenTime"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="open:  9:00"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/idCafeCloseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:text="close: 21:00"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
        android:id="@+id/idCafeAdress"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="수영구 수영로 481번길"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/idCafePhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="010-4871-3125"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/idCafeInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="대충 엄청난 내용."
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/black"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/idCafeTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/personalButton"
        android:text="예약하기"
        android:layout_marginLeft="15dp"/>
</LinearLayout>