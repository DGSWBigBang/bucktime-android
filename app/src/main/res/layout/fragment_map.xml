<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="org.qpeterp.timebucks.mainFragments.FragmentMap">
    
    <com.google.android.gms.maps.MapView
        android:id="@+id/idGoogleMaps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <LinearLayout
        android:id="@+id/idCafeInfView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:weightSum="7"
        app:layout_constraintVertical_bias="1"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/idCafeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="엄카페"
            android:textColor="@color/black"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/idCafeAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="수영구 수영로 481번길"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/idCafeInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="대충 엄청난 내용. 엄청나고 들으면 기가 뚫린느 이야기들이 있는 없까케 ㄹㅇㅋㅋ"
            android:textColor="@color/black"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/idCafeTimeButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="예약하기"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/cafe_information_button_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:layout_weight="1"/>ㄷ
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>